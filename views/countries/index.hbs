<h1>{{title}}</h1>

{{#if user}}
{{!-- Add links to CRUD operations --}}
<a href="/countries/add">Add a new country</a>
{{/if}}

{{!-- Show countries details --}}
<table class="table table-striped table-hover">
    <thead>
        <th>countryName</th>
        <th>gold</th>
        <th>silver</th>
        <th>bronze</th>
        <th>eventName</th>
        <th>eventStatus</th>
        <th></th>
    </thead>
    <tbody>
    {{#each dataset}}
    <tr>
        <td>{{this.countryName}}</td>
        <td>{{this.gold}}</td>
        <td>{{this.silver}}</td>
        <td>{{this.bronze}}</td>
        <td>{{this.eventName}}</td>
        <td>{{this.eventStatus}}</td>
        {{#if ../user}}
        <td>
            <a href="/countries/edit/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/countries/delete/{{this._id}}" class="btn btn-danger" onclick="return confirmDeletion();">Delete</a>
        </td>
        {{/if}}
    </tr>
    {{/each}}
    </tbody>
</table>